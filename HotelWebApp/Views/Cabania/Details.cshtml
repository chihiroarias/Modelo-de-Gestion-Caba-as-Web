                <label for="responsable" class="control-label"> Responsable</label>
                <input type="text" name="responsable" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" name="cabaniaAsociada" value="@Model.CabaniaId" />
       
            </div>
            <div class="form-group">
