@model HotelMVC.Models.EntidadesModel.CabaniaModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Cabania</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="tipoAsociado" class="control-label">Tipo de cabaña</label>
                <select name="tipoAsociado" class="form-control">
                    <option value="9999999" selected>-- Seleccione un tipo --</option>
                    @foreach (var tipo in ViewBag.Tipos)
                    {
                        <option value="@tipo.TipoId">@tipo.NombreInput</option>
                    }
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="NameInput" class="control-label"></label>
                <input asp-for="NameInput" class="form-control"/>
                <span asp-validation-for="NameInput" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control"  />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Jacuzzi" /> @Html.DisplayNameFor(model => model.Jacuzzi)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Habilitada" /> @Html.DisplayNameFor(model => model.Habilitada)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="MaxPersonas" class="control-label"></label>
                <input asp-for="MaxPersonas" class="form-control" />
                <span asp-validation-for="MaxPersonas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgNombreInput" class="control-label"></label>
                <input asp-for="ImgNombreInput" class="form-control" />
                <span asp-validation-for="ImgNombreInput" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    @ViewBag.Message
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
